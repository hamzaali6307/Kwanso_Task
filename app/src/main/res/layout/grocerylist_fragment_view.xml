<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.MainViewController">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/empty_list"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/no_item_found_in_grocery"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
    <io.ak1.BubbleTabBar
        android:layout_alignParentBottom="true"
        android:id="@+id/bubbleTabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:padding="@dimen/_5sdp"
        app:bubbletab_menuResource="@menu/bottom_nav"
        app:bubbletab_disabled_icon_color="@color/black"
        app:bubbletab_horizontal_padding="@dimen/_15sdp"
        app:bubbletab_icon_size="@dimen/_15sdp"
        app:bubbletab_title_size="@dimen/_12ssp"
        app:bubbletab_icon_padding="@dimen/_5sdp"
        app:bubbletab_vertical_padding="@dimen/_8sdp"
        app:bubbletab_tab_corner_radius="@dimen/_10sdp">
    </io.ak1.BubbleTabBar>
</RelativeLayout>